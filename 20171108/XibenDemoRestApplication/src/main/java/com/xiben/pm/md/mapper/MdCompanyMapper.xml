  <select id="queryComanpy"  parameterType="java.lang.Integer" resultMap="BaseResultMapEx">
  select a.*,b.role 
  from md_company a 
	join (select * from md_company_member where userid=#{userid,jdbcType=INTEGER}) b 
		on (b.role=1 or b.role=2) 
			and b.companyid = a.companyid

	UNION
	select c.*, case d.deptrole when 1 then 3 else 4 end as role 
    from md_company c 
		join (select * from md_department_member where memberid=#{userid,jdbcType=INTEGER}) d on (d.deptrole = 1 or d.deptrole=2) and d.compid = c.companyid 
	where c.companyid not in (select compid from md_company_member where userid=#{userid,jdbcType=INTEGER} and (d.deptrole = 1 or d.deptrole=2))
  
  </select>
  
